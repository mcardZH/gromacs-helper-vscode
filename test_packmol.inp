# Packmol input file example
# Packing water molecules and protein

tolerance 2.0
seed 12345
output system.pdb

structure water.pdb
  number 1000
  inside sphere 0. 0. 0. 20.
  outside sphere 0. 0. 0. 5.
end structure

structure protein.pdb
  number 1
  center
  fixed 0. 0. 0. 0. 0. 0.
end structure

structure lipid.pdb
  number 50
  inside box 0. 0. 15. 30. 30. 25.
  atoms 1 2 3
  below plane 0. 0. 1. 20.
end structure

# Add some constraints
structure ion.pdb
  number 10
  inside cube 0. 0. 0. 25.
  radius 2.5
  over plane 0. 0. 1. 0.
end structure
