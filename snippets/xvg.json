{
    "XVG Header Template": {
        "prefix": "xvg-header",
        "body": [
            "# This file was created ${CURRENT_DATE} ${CURRENT_TIME}",
            "# Created by: GROMACS Helper",
            "#",
            "@ title \"${1:Data Title}\"",
            "@ xaxis  label \"${2:Time (ps)}\"",
            "@ yaxis  label \"${3:Value}\"",
            "@ TYPE xy",
            "@ view 0.15, 0.15, 0.75, 0.85",
            "@ legend on",
            "@ legend box on",
            "@ legend loctype view",
            "@ legend 0.78, 0.8",
            "@ legend length 2",
            "@ s0 legend \"${4:Series 1}\"",
            "$0"
        ],
        "description": "Insert XVG file header template"
    },
    "XVG Data Point": {
        "prefix": "xvg-data",
        "body": [
            "${1:0.000}    ${2:0.000}$0"
        ],
        "description": "Insert XVG data point"
    },
    "XVG Multiple Series": {
        "prefix": "xvg-multi",
        "body": [
            "@ s0 legend \"${1:Series 1}\"",
            "@ s1 legend \"${2:Series 2}\"",
            "@ s2 legend \"${3:Series 3}\"",
            "$0"
        ],
        "description": "Insert multiple data series legends"
    }
}
