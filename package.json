    "configuration": {
      "type": "object",
      "title": "GROMACS Helper",
      "properties": {
        "gromacsHelper.semanticHighlighting.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable semantic highlighting for residues in GROMACS files"
        },
        "gromacsHelper.colors.residue_acidic": {
          "type": "string",
          "default": "#FF6B6B",
          "format": "color-hex",
          "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
          "description": "Color for acidic residues (ASP, GLU) - must be a valid hex color code"
        },
        "gromacsHelper.colors.residue_acidic_bold": {
          "type": "boolean",
          "default": false,
          "description": "Make acidic residues bold"
        },
        "gromacsHelper.colors.residue_basic": {
