{
  "name": "gromacs-helper-vscode",
  "displayName": "GROMACS Helper for VS Code",
  "description": "Complete language support for GROMACS molecular dynamics simulation files including MDP, TOP, GRO, and NDX formats",
  "version": "0.0.2",
  "publisher": "gromacs-helper",
  "author": {
    "name": "mcardzh"
  },
  "license": "GPL-2.0-only",
  "homepage": "https://github.com/gromacs-helper/gromacs-helper-vscode",
  "repository": {
    "type": "git",
    "url": "https://github.com/gromacs-helper/gromacs-helper-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/gromacs-helper/gromacs-helper-vscode/issues"
  },
  "keywords": [
    "gromacs",
    "molecular dynamics",
    "simulation",
    "mdp",
    "topology",
    "gro",
    "ndx",
    "language support"
  ],
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Snippets"
  ],
  "icon": "imgs/icon.png",
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "gromacs_mdp_file",
        "aliases": [
          "GROMACS MDP",
          "mdp"
        ],
        "extensions": [
          ".mdp"
        ],
        "configuration": "./syntaxes/mdp/mdp-language-configuration.json",
        "icon": {
          "light": "./imgs/mdp.svg",
          "dark": "./imgs/mdp.svg"
        }
      },
      {
        "id": "gromacs_top_file",
        "aliases": [
          "GROMACS Topology",
          "top"
        ],
        "extensions": [
          ".top",
          ".itp"
        ],
        "filenamePatterns": [
          "*.top.*",
          "*.itp.*",
          "#*.top.*#",
          "#*.itp.*#"
        ],
        "configuration": "./syntaxes/top/top-language-configuration.json",
        "icon": {
          "light": "./imgs/top.svg",
          "dark": "./imgs/top.svg"
        }
      },
      {
        "id": "gromacs_gro_file",
        "aliases": [
          "GROMACS Structure",
          "gro"
        ],
        "extensions": [
          ".gro"
        ],
        "filenamePatterns": [
          "*.gro.*",
          "#*.gro.*#"
        ],
        "configuration": "./syntaxes/gro/gro-language-configuration.json",
        "icon": {
          "light": "./imgs/gro.svg",
          "dark": "./imgs/gro.svg"
        }
      },
      {
        "id": "gromacs_ndx_file",
        "aliases": [
          "GROMACS Index",
          "ndx"
        ],
        "extensions": [
          ".ndx"
        ],
        "filenamePatterns": [
          "*.ndx.*",
          "#*.ndx.*#"
        ],
        "configuration": "./syntaxes/ndx/ndx-language-configuration.json",
        "icon": {
          "light": "./imgs/ndx.svg",
          "dark": "./imgs/ndx.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "gromacs_mdp_file",
        "scopeName": "source.mdp",
        "path": "./syntaxes/mdp/mdp.tmLanguage.json"
      },
      {
        "language": "gromacs_top_file",
        "scopeName": "source.top",
        "path": "./syntaxes/top/top.tmLanguage.json"
      },
      {
        "language": "gromacs_gro_file",
        "scopeName": "source.gro",
        "path": "./syntaxes/gro/gro.tmLanguage.json"
      },
      {
        "language": "gromacs_ndx_file",
        "scopeName": "source.ndx",
        "path": "./syntaxes/ndx/ndx.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "gromacs_mdp_file",
        "path": "./snippets/mdp.json"
      },
      {
        "language": "gromacs_gro_file",
        "path": "./snippets/gro.json"
      },
      {
        "language": "gromacs_ndx_file",
        "path": "./snippets/ndx.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9",
    "@vscode/vsce": "^3.5.0",
    "eslint": "^8.57.0",
    "glob": "^10.3.10",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  }
}
