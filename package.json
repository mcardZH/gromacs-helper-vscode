    "languages": [
      {
        "id": "gromacs_mdp_file",
        "aliases": [
          "GROMACS MDP",
          "mdp"
        ],
        "extensions": [
          ".mdp"
        ],
        "configuration": "./syntaxes/mdp/mdp-language-configuration.json",
        "icon": {
          "light": "./imgs/mdp.svg",
          "dark": "./imgs/mdp.svg"
        }
      },
      {
        "id": "gromacs_top_file",
        "aliases": [
          "GROMACS Topology",
          "top"
        ],
        "extensions": [
