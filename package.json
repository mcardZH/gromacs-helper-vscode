    "snippets": [
      {
        "language": "gromacs_mdp_file",
        "path": "./snippets/mdp.json"
      },
      {
        "language": "gromacs_gro_file",
        "path": "./snippets/gro.json"
      },
      {
        "language": "gromacs_ndx_file",
        "path": "./snippets/ndx.json"
      },
      {
        "language": "gromacs_pdb_file",
        "path": "./snippets/pdb.json"
      },
      {
        "language": "gromacs_xvg_file",
        "path": "./snippets/xvg.json"
      },
      {
        "language": "packmol",
        "path": "./snippets/packmol.json"
      }
    ],
    "commands": [
      {
        "command": "gromacs-helper.previewXvg",
        "title": "Preview XVG Chart",
        "icon": "$(graph)",
        "when": "resourceExtname == .xvg"
      },
      {
        "command": "gromacs-helper.previewPackmol",
        "title": "Preview Packmol 3D Structure",
        "icon": "$(symbol-structure)",
        "when": "resourceExtname == .inp || resourceExtname == .packmol"
      },
      {
        "command": "gromacs-helper.manageSnippets",
        "title": "Manage MDP Snippets",
        "icon": "$(symbol-snippet)",
        "category": "GROMACS Helper"
      },
      {
        "command": "gromacs-helper.refreshSnippets",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "gromacs-helper.insertSnippetFromTree",
        "title": "Insert Snippet",
        "icon": "$(add)"
      },
      {
        "command": "gromacs-helper.editSnippetFromTree",
        "title": "Edit Snippet",
        "icon": "$(edit)"
      },
      {
        "command": "gromacs-helper.deleteSnippetFromTree",
        "title": "Delete Snippet",
        "icon": "$(trash)"
      },
      {
        "command": "gromacs-helper.configureResidueColors",
        "title": "Configure Residue Colors",
        "icon": "$(color-mode)",
        "category": "GROMACS Helper"
      },
      {
        "command": "gromacs-helper.configureAdvancedColors",
        "title": "Configure Colors & Bold Settings",
        "icon": "$(paintcan)",
        "category": "GROMACS Helper"
      },
      {
        "command": "gromacs-helper.resetResidueColors",
        "title": "Reset Residue Colors to Default",
        "icon": "$(refresh)",
        "category": "GROMACS Helper"
      },
      {
        "command": "gromacs-helper.openUnitConverter",
        "title": "Open Unit Converter",
        "icon": "$(calculator)",
        "category": "GROMACS Helper"
      },
      {
        "command": "gromacs-helper.toggleSemanticHighlighting",
        "title": "Toggle Semantic Highlighting",
        "icon": "$(eye)",
        "category": "GROMACS Helper"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "gromacsSnippets",
          "name": "MDP Snippets",
          "icon": "$(symbol-snippet)",
          "when": "true"
        }
      ],
      "gromacs-preview": [
        {
          "id": "gromacs-helper.packmolPreview",
          "type": "webview",
          "name": "Packmol 3D Preview",
          "icon": "$(symbol-structure)",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "gromacs-preview",
          "title": "GROMACS Preview",
          "icon": "$(symbol-structure)"
        }
      ]
    },
    "menus": {
      "explorer/context": [
        {
          "command": "gromacs-helper.previewXvg",
          "when": "resourceExtname == .xvg",
          "group": "gromacs-helper"
        },
        {
          "command": "gromacs-helper.previewPackmol",
          "when": "resourceExtname == .inp || resourceExtname == .packmol",
          "group": "gromacs-helper"
        }
      ],
      "editor/title": [
        {
          "command": "gromacs-helper.previewXvg",
          "when": "resourceExtname == .xvg",
          "group": "navigation"
        },
        {
          "command": "gromacs-helper.previewPackmol",
          "when": "resourceExtname == .inp || resourceExtname == .packmol",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "gromacs-helper.manageSnippets",
          "when": "editorLangId == gromacs_mdp_file",
          "group": "gromacs-helper"
        }
      ],
      "commandPalette": [
        {
          "command": "gromacs-helper.manageSnippets",
          "when": "true"
        },
        {
          "command": "gromacs-helper.configureResidueColors",
          "when": "true"
        },
        {
          "command": "gromacs-helper.configureAdvancedColors",
          "when": "true"
        },
        {
          "command": "gromacs-helper.resetResidueColors",
          "when": "true"
        },
        {
          "command": "gromacs-helper.toggleSemanticHighlighting",
          "when": "true"
        },
        {
          "command": "gromacs-helper.openUnitConverter",
          "when": "true"
        }
      ],
      "view/title": [
        {
          "command": "gromacs-helper.manageSnippets",
          "when": "view == gromacsSnippets",
          "group": "navigation"
        },
        {
          "command": "gromacs-helper.refreshSnippets",
          "when": "view == gromacsSnippets",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "gromacs-helper.insertSnippetFromTree",
          "when": "view == gromacsSnippets && viewItem == snippet",
          "group": "inline"
        },
        {
          "command": "gromacs-helper.editSnippetFromTree",
          "when": "view == gromacsSnippets && viewItem == snippet",
          "group": "edit"
        },
        {
          "command": "gromacs-helper.deleteSnippetFromTree",
          "when": "view == gromacsSnippets && viewItem == snippet",
          "group": "edit"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "test:ci": "vscode-test --config .vscode-test.ci.mjs"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9",
    "@vscode/vsce": "^3.5.0",
    "eslint": "^8.57.0",
    "glob": "^10.3.10",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  }
}
